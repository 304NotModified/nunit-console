<?xml version="1.0"?>
<project name="NUnitFrameworkTests" default="build" basedir=".">

  <target name="build">
    <csc target="library" 
        output="${current.build.dir}/nunit.framework.tests.dll"
        debug="${build.debug}" 
        define="${build.defines}"
        warninglevel="${warn}">
      <sources>
        <include name="../CommonAssemblyInfo.cs"/>
        <include name="TestContextTests.cs"/>

        <include name="Api/*.cs" />
        <include name="Assertions/*.cs" />
        <include name="Attributes/*.cs"/>
        <include name="Constraints/*.cs" />

        <include name="Internal/*.cs"/>
        <exclude name="Internal/DeduceTypeArgsFromArgs.cs" unless="${runtime.version>='2.0'}"/>
        <exclude name="Internal/GenericTestFixtureTests.cs" unless="${runtime.version>='2.0'}"/>
        <exclude name="Internal/GenericTestMethodTests.cs" unless="${runtime.version>='2.0'}"/>
        <exclude name="Internal/SimpleGenericMethods.cs" unless="${runtime.version>='2.0'}"/>
        <exclude name="Internal/TypeParameterUsedWithTestMethod.cs" unless="${runtime.version>='2.0'}"/>

        <include name="Syntax/*.cs" />
        <include name="TestUtilities/*.cs"/>
      </sources>
      <resources prefix="NUnit.Framework.Tests">
        <include name="TestImage1.jpg"/>
        <include name="TestImage2.jpg"/>
        <include name="TestText1.txt"/>
        <include name="TestText2.txt"/>
      </resources>
      <references basedir="${current.build.dir}">
        <include name="nunit.framework.dll"/>
        <include name="nunit.testdata.dll"/>
        <include name="System.Data.dll"/>
        <include name="System.Drawing.dll"/>
      </references>
    </csc>
  </target>

  <target name="package">
    <copy todir="${package.src.dir}/tests">
      <fileset>
        <include name="**/*.cs"/>
        <include name="*.csproj"/>
        <include name="TestImage1.jpg"/>
        <include name="TestImage2.jpg"/>
        <include name="TestText1.txt"/>
        <include name="TestText2.txt"/>
        <include name="nunit.framework.tests.build"/>
        <include name="nunitlite.tests.build"/>
      </fileset>
    </copy>
  </target>

</project>
